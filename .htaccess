<IfModule mod_rewrite.c>
 RewriteEngine on
 
 RewriteCond %{REQUEST_URI} min/
 RewriteCond %{REQUEST_URI} ^/harvard-mobile(.*)$
 RewriteRule .* future/web/%1 [QSA]
 
 RewriteCond %{REQUEST_URI} !min/
 RewriteCond %{REQUEST_URI} ^/harvard-mobile(.*)$
 RewriteRule .* future/web/index.php?_path=%1 [QSA]

</IfModule>
